<Window x:Class="Application_Graphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Graphique"
        mc:Ignorable="d"
        Title="JVDex" Height="720" Width="1080">
    <Grid x:Name="MainGrid" Background="#3D3C3C" HorizontalAlignment="Left" Width="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="560"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="930"/>
        </Grid.ColumnDefinitions>
        <Image Height="150" Width="150" Source="Resources\logotest.png"/>
        <ListView Grid.Row="1" Background="#3D3C3C">
            <TextBlock HorizontalAlignment="Center" Width="135" Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="Arial Black" TextAlignment="Center" Background="#FF14CB14" TextWrapping="Wrap">The Legend Of Zelda</TextBlock>
            <TextBlock HorizontalAlignment="Center" Width="135" Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="Arial Black" TextAlignment="Center" Background="#FFE40F0F">Mario</TextBlock>
            <TextBlock HorizontalAlignment="Center" Width="135" Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="Arial Black" TextAlignment="Center" Background="#FFFFE800">Pokemon</TextBlock>
            <TextBlock HorizontalAlignment="Center" Width="135" Foreground="White" FontSize="22" FontWeight="Bold" FontFamily="Arial Black" TextAlignment="Center" Background="#FF8D6121" TextWrapping="Wrap">Professeur Layton</TextBlock>
            <TextBlock HorizontalAlignment="Center" Width="135" Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="Arial Black" TextAlignment="Center" Background="#FF40A9F1" TextWrapping="Wrap">Dragon Quest</TextBlock>
        </ListView>
        <Image Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"  Height="100"  Width="100" Source="Resources\fav-logo.png" Margin="0,0,10,0" />

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0" TextWrapping="Wrap" Width="200" Height="45" Background="#FF3D3C3C" Foreground="White" FontWeight="Bold" FontSize="30" BorderBrush="#FFD4DAEA">
                Rechercher
            </TextBox>
            <ComboBox HorizontalAlignment="Left" Margin="465,0,0,0" VerticalAlignment="Center" Width="120">
                <ComboBoxItem IsSelected="True" FontSize="15">A-Z</ComboBoxItem>
                <ComboBoxItem FontSize="15">Z-A</ComboBoxItem>
                <ComboBoxItem FontSize="15">Les plus récents</ComboBoxItem>
                <ComboBoxItem FontSize="15">Les plus ancients</ComboBoxItem>
                <ComboBoxItem FontSize="15">Les créateurs</ComboBoxItem>
            </ComboBox>
            <Label HorizontalAlignment="Left" Margin="324,0,0,0" VerticalAlignment="Center" Width="141" Height="55" Foreground="White" FontWeight="Bold" FontSize="30">
                Trié par :
            </Label>
            <ListView Grid.Row="2" Margin="50,50,50,0" Background="#3D3C3C">
                
            </ListView>
        </Grid>
    </Grid>
</Window>
